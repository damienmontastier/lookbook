font-face(path, name, weight = normal, style = normal)
  @font-face
    font-family: name;
    font-weight: weight
    font-style: style
    -webkit-font-smoothing: antialiased
    src: url($paths-fonts + '' + path + '.woff') format('woff'),
         url($paths-fonts + '' + path + '.eot') format('eot'),
         url($paths-fonts + '' + path + '.ttf') format('ttf'),
         url($paths-fonts + '' + path + '.otf') format('otf'),
         url($paths-fonts + '' + path + '.svg') format('svg')
